<%- include('../userLayouts/header.ejs') %>

<div class="page-wrapper">
    <%- include('../userLayouts/pageHeader.ejs') %>

    <main class="main">
        <nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Wallet</li>
                </ol>
            </div><!-- End .container -->
        </nav><!-- End .breadcrumb-nav -->

        <div class="page-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <div class="card shadow-lg mb-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h2 class="card-title mb-0" style="font-size: 4rem; color: #343a40; text-decoration: underline;">My Wallet</h2>
                                    <button class="btn btn-outline-secondary" onclick="window.history.back()">Back</button>
                                </div>
                                
                                <div class="wallet-info mb-4 p-3 bg-light rounded border">
                                    <p class="mb-1" style="font-size: 2rem;"><strong>Wallet Balance:</strong> $<span id="wallet-balance" style="font-size: 2.5rem; color: #007bff;">100.00</span></p>
                                </div>

                                <h4 class="mb-3" style="color: #343a40;">Transaction History</h4>
                                <ul class="list-group">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="mb-1" style="color: #495057;">Deposit</h5>
                                            <small style="color: #6c757d;">Date: June 1, 2024</small>
                                        </div>
                                        <div>
                                            <strong style="color: #28a745;">Amount: $50.00</strong>
                                        </div>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="mb-1" style="color: #495057;">Withdrawal</h5>
                                            <small style="color: #6c757d;">Date: May 25, 2024</small>
                                        </div>
                                        <div>
                                            <strong style="color: #dc3545;">Amount: $30.00</strong>
                                        </div>
                                    </li>
                                </ul>
                            </div><!-- End .card-body -->
                        </div><!-- End .card -->
                    </div><!-- End .col-md-8 -->
                </div><!-- End .row -->
            </div><!-- End .container -->
        </div><!-- End .page-content -->
    </main><!-- End .main -->

    <%- include('../userLayouts/pageFooter.ejs') %>
</div><!-- End .page-wrapper -->

<button id="scroll-top" title="Back to Top"><i class="icon-arrow-up"></i></button>

<%- include('../userLayouts/footer.ejs') %>

<style>
.card {
    border: none;
    border-radius: 12px;
    transition: all 0.3s ease;
    background: #ffffff;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 30px rgba(0, 0, 0, 0.1);
}

.wallet-info {
    background: #f8f9fa;
    border-radius: 12px;
    padding: 1.5rem;
    border: 1px solid #e9ecef;
}

.wallet-info p {
    margin: 0;
    font-size: 1.75rem; /* Increased font size */
}

.list-group-item {
    border: none;
    padding: 1.5rem;
    background-color: #fff;
    font-size: 1.5rem; /* Increased font size */
    border-bottom: 1px solid #e9ecef;
    transition: background-color 0.3s ease;
}

.list-group-item:hover {
    background-color: #f1f3f5;
}

.list-group-item:last-child {
    border-bottom: none;
}

.list-group-item h5 {
    margin-bottom: 0.5rem;
}

.btn-primary, .btn-outline-secondary {
    font-size: 1.5rem; /* Increased font size */
    transition: background-color 0.3s, border-color 0.3s, transform 0.3s;
}

.btn-primary:hover, .btn-outline-secondary:hover {
    transform: translateY(-2px);
}

.btn-outline-secondary {
    border-color: #6c757d;
    color: #6c757d;
}

.btn-outline-secondary:hover {
    background-color: #6c757d;
    color: #fff;
}
</style>
