        </div>

        <div class="address-item">
            <input type="checkbox" id="address5" name="address5">
            <label for="address5">Address 5</label>
        </div>

        <!-- Save button -->
        <button class="btn btn-primary btn-save" onclick="saveAddress()">Save</button>
    </div>

    <a id="openModalButton" href="#">Choose a different address</a>

    <div id="myModal" class="modal">
        <div class="modal-content">
            <h2>Select Address</h2>
            <form id="addressForm">
                <!-- Populate this list dynamically with available addresses -->
                <input type="radio" id="address1" name="address" value="Address 1">
                <label for="address1">Address 1</label><br>
                <input type="radio" id="address2" name="address" value="Address 2">
                <label for="address2">Address 2</label><br>
                <!-- Add more addresses as needed -->
                <button type="button" onclick="selectAddress()">Select</button>
                <button type="button" onclick="closeModal()">Close</button>
              </form>
        </div>
      </div>

      <p id="selectedAddress"></p>
      
    

