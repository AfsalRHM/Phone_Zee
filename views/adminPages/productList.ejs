                    <div class="card-body">
                        <% if (product.length == 0) { %>
                            <p> There has no Products Available </p>
                        <% } else { %>
                            <% for (let i = 0; i < product.length; i++) { %>
                            <article class="itemlist">
                                <div class="row align-items-center">
                                    <div class="col-lg-2 col-sm-2 col-6 flex-grow-1 col-name">
                                        <a class="itemside" href="#">
